<% if resource.present? && resource.errors.any? %>
  <%= content_tag :div, id: 'error_explanation', class: 'resource-errors card text-white bg-danger m-3', data: { resource_id: resource.id } do %>
    <div class='card-header'>
      <%= t('.error', count: resource.errors.count) %>
    </div>
    <ul class='list-group list-group-flush text-danger'>
      <% resource.errors.full_messages.each do |message| %>
        <li class='list-group-item'><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
