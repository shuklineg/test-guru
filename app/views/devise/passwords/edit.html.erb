<div class='col-lg-6 offset-lg-3 border rounded my-3 text-xs-center'>
  <div class='h2'><%= t('.title') %></div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <div class='form-row'>
      <div class='form-group col-lg'>
        <%= f.label :password %>
        <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'form-control', placeholder: User.human_attribute_name(:password) %>
        <% if @minimum_password_length %>
          <em>(<%= t('.minimum_password_length', length: @minimum_password_length) %>)</em>
        <% end %>
      </div>

      <div class='form-group col-lg'>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: User.human_attribute_name(:password_confirmation) %>
      </div>
    </div>

    <%= f.submit t('.change'), class: 'btn btn-primary btn-block' %>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>
