<%= form_with(model: [:admin, @question, @answer], local: true) do |form| %>
  <%= render 'shared/validation_errors', resource: @answer %>
  <div class='form-group'>
    <%= form.label :body %>
    <%= form.text_area :body, id: :answer_body, rows: 7, cols: 60, class: 'form-control' %>
  </div>
  <div class='custom-control custom-checkbox m-3'>
    <%= form.check_box :correct, id: :answer_correct, class: 'custom-control-input' %>
    <%= form.label :correct, class: 'custom-control-label' %>
  </div>
  <%= form.submit class: 'btn btn-primary btn-block' %>
<% end %>
