<tr class='<%= 'bg-warning' if test.questions.active.size.zero? %>'>
  <td class='align-middle'>
    <%= render 'form_inline', test: test == @test ? @test : test %>
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id} %>
    <%= content_tag :a, href: '#',
                        class: 'btn btn-outline-primary form-inline-link m-2',
                        data: { test_id: test.id } do %>
      <%= octicon('pencil') %>
    <% end %>
  </td>
  <td class='align-middle'><%= test.level %></td>
  <td class='align-middle'><%= test.category.title %></td>
  <td class='align-middle'><%= test.timer %></td>
  <td class='align-middle'><%= mail_to_user(test.author) %></td>
  <td class='align-middle'><%= test.questions.size %></td>
  <td class='align-middle'>
    <div class='btn-group' role='group'>
      <%= link_to t('.open'), admin_test_path(test), class: 'btn btn-secondary' %>
      <%= link_to t('.edit'), edit_admin_test_path(test), class: 'btn btn-secondary' %>
      <%= link_to t('.destroy'), admin_test_path(test), method: :delete, data: { confirm: t('dialogs.are_you_sure')}, class: 'btn btn-danger'  %>
    </div>
  </td>
</tr>
