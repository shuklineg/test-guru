<%= form_with(model: [:admin, @test], local: true) do |form| %>
  <%= render 'shared/validation_errors', resource: @test %>
  <div class='form-group'>
    <%= form.label :title %>
    <%= form.text_field :title, id: :test_title, class: 'form-control', placeholder: Test.human_attribute_name(:title) %>
  </div>

  <div class='form-row'>
    <div class='form-group col-lg-4'>
      <%= form.label :level %>
      <%= form.number_field :level, id: :test_level, class: 'form-control', placeholder: Test.human_attribute_name(:level) %>
    </div>

    <div class='form-group col-lg-5'>
      <%= form.label :category %>
      <%= form.collection_select :category_id, Category.all, :id, :title, {prompt: true}, {class: 'form-control'} %>
    </div>

    <div class='form-group col-lg-3'>
      <%= form.label :timer_in_minutes %>
      <%= form.number_field :timer_in_minutes, id: :test_timer_in_minutes, class: 'form-control', placeholder: Test.human_attribute_name(:timer_in_minutes) %>
      <small class='form-text text-muted'>
          (<%= t('.zero_if_none') %>)
        </small>
    </div>
  </div>

  <%= form.submit class: 'btn btn-primary btn-block' %>
<% end %>
