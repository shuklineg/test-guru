<div class='card col-lg-8 offset-lg-2 border rounded my-3 text-xs-center'>
  <div class='card-body'>
    <h1 class='card-title'><%= question_header(@question) %></h1>
    <%= render 'form' %>

    <div class='btn-group my-3 btn-block' role='group'>
      <%= link_to t('.test'), admin_test_path(@question.test), class: 'btn btn-secondary' %>
      <%= link_to t('.show'), admin_question_path(@question), class: 'btn btn-secondary' %>
      <%= link_to t('.destroy'), admin_question_path(@question), method: :delete, data: { confirm: t('dialogs.are_you_sure')}, class: 'btn btn-secondary'  %>
    </div>
  </div>
</div>
