<%= form_with(model: @test, local: true) do |form| %>
  <%= render 'shared/validation_errors', resource: @test %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, id: :test_title %>
  </p>

  <p>
    <%= form.label :level %><br>
    <%= form.text_field :level, id: :test_level %>
  </p>

  <p>
    <%= form.label :category %><br>
    <%= form.collection_select :category_id, Category.all, :id, :title %>
  </p>

  <p>
    <%= form.label :author %><br>
    <%= form.collection_select :author_id, User.all, :id, :email %>
  </p>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
